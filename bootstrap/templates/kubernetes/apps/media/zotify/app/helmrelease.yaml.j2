---
apiVersion: helm.toolkit.fluxcd.io/v2
kind: HelmRelease
metadata:
  name: zotify-music
spec:
  interval: 30m
  chart:
    spec:
      chart: app-template
     # version: 4.1.1
      sourceRef:
        kind: HelmRepository
        name: bjw-s
        namespace: flux-system
  install:
    remediation:
      retries: 3
  upgrade:
    cleanupOnFail: true
    remediation:
      retries: 3
#  valuesFrom:
#   - kind: ConfigMap
#     name: zotify-helm-values
  values:
     #enter values here for global overrides
    controllers:
      zotify:
        annotations:
          reloader.stakater.com/auto: "true"
        containers:
          app:
            image:
              repository: alior99/zotify:latest
              tag: latest
              pullPolicy: Always
            envFrom:
              - secretRef:
                  name: zotify-music-env
            terminationMessagePath: /dev/termination-log
            terminationMessagePolicy: File
            probes:
              liveness: &probes
                enabled: false
                custom: true
                spec:
                  httpGet:
                    path: /
                    port: 80
                  initialDelaySeconds: 15
                  periodSeconds: 10
                  timeoutSeconds: 1
                  failureThreshold: 3
              readiness: *probes
            securityContext:
              allowPrivilegeEscalation: false
              readOnlyRootFilesystem: true
              capabilities: { drop: ["ALL"] }
            resources:
              requests:
                cpu: 100m
                memory: 100Mi
              limits:
                memory: 4Gi
    defaultPodOptions:
      securityContext:
        runAsNonRoot: true
        runAsUser: 1000
        runAsGroup: 1000
        fsGroup: 1000
        fsGroupChangePolicy: OnRootMismatch
        seccompProfile: { type: RuntimeDefault }
    service:
      app:
        controller: zotify
        ports:
          http:
            port: 80
#     ingress:
#      app:
#        className: internal

#        hosts:
 #         - host: "{{ .Release.Name }}."
  #          paths:
   #           - path: /
    #            service:
     #             identifier: app
      #            port: http
    persistence:
      tmp:
        type: emptyDir
        globalMounts:
          - path: /tmp
      media:
        type: nfs
        server: 192.168.86.9
        path: /PlexLib
        globalMounts:
          - path: /root/Music
            subPath: Music
      zotify-config:
        type: persistentVolumeClaim
        existingClaim: zotify-config
        globalMounts:
          - path: /root/temp
      zotify-configmap:
          type: secret
          name: zotify-music-config
          defaultMode: 420
          items:
              - key: config.json
                path: config.json
          globalMounts:
            - path: /root/.config/zotify
      zotify-downloadsurls:
          type: secret
          name: zotify-music-config
          defaultMode: 420
          items:
              - key: downloads.txt
                path: downloads.txt
          globalMounts:
            - path: /root/.config/urls

