---
# yaml-language-server: $schema=https://kube-schemas.pages.dev/external-secrets.io/externalsecret_v1beta1.json
apiVersion: external-secrets.io/v1beta1
kind: ExternalSecret
metadata:
  name: &name zotify-music-env
spec:
  secretStoreRef:
    kind: ClusterSecretStore
    name: bitwarden-fields
  target:
    name: *name
    template:
      engineVersion: v2
      data:
        ARGSS: "{{ .ARGSS }}"
        USERNAME: "{{ .username }}"
        PASSWORD: "{{ .password }}"
  data:
    - secretKey: ARGSS
      remoteRef:
        key: zotify-music
        property: ARGSS
    - secretKey: username
      remoteRef:
        key: zotify-music
        property: username
    - secretKey: password
      remoteRef:
        key: zotify-music
        property: password
---
# yaml-language-server: $schema=https://kube-schemas.pages.dev/external-secrets.io/externalsecret_v1beta1.json
apiVersion: external-secrets.io/v1beta1
kind: ExternalSecret
metadata:
  name: &name zotify-music-urls
spec:
  secretStoreRef:
    kind: ClusterSecretStore
    name: bitwarden-notes
  target:
    name: *name
    template:
      engineVersion: v2
      data:
        downloads.txt: |
          {{ .downloads }}
  data:
    - secretKey: downloads
      remoteRef:
        key: zotify-music
        property: notes
---
# yaml-language-server: $schema=https://kube-schemas.pages.dev/external-secrets.io/externalsecret_v1beta1.json
apiVersion: external-secrets.io/v1beta1
kind: ExternalSecret
metadata:
  name: &name zotify-music-config
spec:
  secretStoreRef:
    kind: ClusterSecretStore
    name: bitwarden-fields
  target:
    name: *name
    template:
      engineVersion: v2
      data:
        config.json: |
         {{ .config }}
        creds.json: |
         {{ .creds }}
 #       encryption.conf: |
 #         [global]
 #         repo1-cipher-pass={{ .CRUNCHY_PGO_CIPHER_PASS }}
#          repo2-cipher-pass={{ .CRUNCHY_PGO_CIPHER_PASS }}
  data:
    - secretKey: config
      remoteRef:
        key: zotify-music
        property: config
    - secretKey: creds
      remoteRef:
        key: zotify-music
        property: creds
