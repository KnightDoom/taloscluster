---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: longhorn-ingress
  #annotations:
    #external-dns.alpha.kubernetes.io/target: "lh.${SECRET_DOMAIN}"
spec:
  ingressClassName: internal
  rules:
    - host: "lh.${SECRET_DOMAIN}"
      http:
        paths:
          - path: / 
            pathType: Prefix
            backend:
              service:
                name: longhorn-frontend
                port:
                  number: 80
